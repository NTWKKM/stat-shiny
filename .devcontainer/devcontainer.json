{
  "name": "Medical Stat Tool (Shiny)",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "posit.shiny",
        "charliermarsh.ruff"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "echo 'Run: shiny run app.py --reload --port 7860'"
  },
  "portsAttributes": {
    "7860": {
      "label": "Shiny Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    7860
  ]
}